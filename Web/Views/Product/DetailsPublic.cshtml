@model Models.Entities.Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DetailsPublic</title>
</head>
<body>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

           @if (User.IsInRole("Retail"))
           {
               <dt>
                   @Html.DisplayNameFor(model => model.RetailPrice)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.RetailPrice)
               </dd>
           }
           else
           {
            <dt>
                @Html.DisplayNameFor(model => model.WholesalePrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WholesalePrice)
            </dd>
           }

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>

            <dd>
                <img src=model.Image height="200" width="200" />
            </dd>

        </dl>
    </div>
<p>
    
    @Html.ActionLink("Back to List", "Index")

@Html.ActionLink("AddToCart", "Cart"))
{

    @Html.HiddenFor(x => x.Id)
    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)

    <input type="submit" value="+ Add to cart" />

}
    @if (User.IsInRole("Retail"))
    {
        <h4>@Model.RetailPrice.ToString("c")</h4>
    }
    else
    {
        <h4>@Model.WholesalePrice.ToString("c")</h4>
    }
</p>

    @foreach (var item in Model.Reviews)
    {
        @item.Description
        <a href=@("/Review/Delete/"+item.Id)>Delete</a>
        <br />
    }

    @using (Html.BeginForm("Create", "Review", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Comment</h4>
            <hr />
            <div class="form-group">
                <label for="review-description"></label>
                <div class="col-md-10">
                    <input id="review-description" class="form-control" name="Description" placeholder="Comment here" />
                </div>
            </div>
            <input type="hidden" name="Id" value=@Model.Id />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</body>
</html>

